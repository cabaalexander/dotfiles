[alias]
    chp = cherry-pick
    unstage = reset HEAD --
    lol = log --color --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
    rlol = log --stat --graph --pretty=oneline --abbrev-commit --date=relative
    co = checkout
    cong = config --global
    props = config --get-regexp
    del = branch -D
    delremote = push --delete origin
    tagcommit = rev-list -n 1
    bsort = for-each-ref --sort=committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
    unassume = update-index --no-assume-unchanged
    assume = update-index --assume-unchanged
    lsassumed = "!git ls-files -v | grep ^h | cut -c 3-"
    rank = shortlog -sn --no-merges
[merge]
    tool = vim_mergetool
    conflictstyle = diff3
[mergetool]
    keepBackup = false
[mergetool "vim_mergetool"]
    cmd = nvim -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
    trustExitCode = true
[push]
    default = simple
[color]
    ui = true
[color "diff"]
    old = red
    meta = yellow
    frag = magenta
    commit = yellow
    new = green
    whitespace = red reverse
[diff]
    tool = fugitive
[difftool]
    prompt = false
[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 52
    newNormal = green
    newHighlight = green 22
[commit]
    gpgsign = true
